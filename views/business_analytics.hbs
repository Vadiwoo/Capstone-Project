  });
});

function topThreeCreators(chartInfo) {
    var tempArr = [];
    tempArr.push(["Name", "Awards", { role: "style" }]);
    tempArr.push([chartInfo.rows[0].creator, parseInt(chartInfo.rows[0].count), "blue"]);
    tempArr.push([chartInfo.rows[1].creator, parseInt(chartInfo.rows[1].count), "red"]);
    tempArr.push([chartInfo.rows[2].creator, parseInt(chartInfo.rows[2].count), "green"]);


  var data = google.visualization.arrayToDataTable(tempArr);

return new google.visualization.DataView(data);
}

