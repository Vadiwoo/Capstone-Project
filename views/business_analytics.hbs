<head>
  <!--Load the AJAX API-->
  <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
  <script type="text/javascript">

  // Load the Visualization API and the corechart package.
  google.charts.load('current', {'packages':['corechart']});

  // Set a callback to run when the Google Visualization API is loaded.
  // google.charts.setOnLoadCallback(drawChart);

  // Callback that creates and populates a data table,
  // instantiates the pie chart, passes in the data and
  // draws it.
  </script>
</head>


<div class="jumbotron">
  <div class="container">
    <h2>Business Analytics</h2>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div id="chartRow">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <h3>Accounts</h3>
      <div class="list-group">
        <button type="button" class="list-group-item list-group-item-action" id="adminVsUser">Admin Vs User Count</button>
        <button type="button" class="list-group-item list-group-item-action" id="byDepartmentAll">All User Types By Department</button>
        <button type="button" class="list-group-item list-group-item-action" id="byDepartmentUser">Normal Users By Department</button>
        <button type="button" class="list-group-item list-group-item-action" id="byDepartmentAdmin">Admin Types By Department</button>
        <button type="button" class="list-group-item list-group-item-action" id="userProfilesCreatedOn">User Profiles Created by Day</button>
      </div>
    </div>
    <div class="col-lg-4">
      <h3>Awards</h3>
      <div class="list-group">
        <button type="button" class="list-group-item list-group-item-action" id="awardTypeComparison">Count by Award Type</button>
        <button type="button" class="list-group-item list-group-item-action" id="userProfilesCreatedOn">User Profiles Created by Day</button>
      </div>
    </div>
  </div>
</div>


<script>
function drawChart(title, data) {
  // Set chart options
  var options = {'title': title,
  'width':600,
  'height':500};

  // Instantiate and draw our chart, passing in some options.
  var chart = new google.visualization.PieChart(document.getElementById('chartRow'));
  chart.draw(data, options);
}

document.getElementById("adminVsUser").addEventListener("click", function() {
  fetch('business_analytics/query?queryName=userType').then(function(response){
    response.json().then(function(json){
      console.log(json);
      drawChart("Admin Vs User", buildAdminVsUser(json));
    });
  });
});

function buildAdminVsUser(chartInfo) {
  var data = new google.visualization.DataTable();
  data.addColumn('string', 'Employee Type');
  data.addColumn('number', 'Count');

  for(var row in chartInfo.rows) {
    var thisRow = chartInfo.rows[row];
    data.addRow([thisRow.employee_type, parseInt(thisRow.count)]);
  }
  return data;
}

