<style>
    .buttonDelete {
        float: left;
        display: inline-block;
        width: 20%;
        height: 20%;
        border: none;
        background-color: #356B15;
        color: white;
        padding: 20px 20px;
        font-size: 20px;
        text-align: center;
        border-radius: 15px;
    }
    

</style>
<ul>
    <li><a href="/sign-out">Sign Out</a></li>
    <li><a href="/user-edit-profile">Edit Profile</a></li>
    <li><a href="/user-delete-award">Awards History</a></li>
    <li><a href="/create-awards">Create Award</a></li>
    <li><a href="/dashboard">Dashboard</a></li>
</ul>
<h3>Award History</h3>

<h5>{{deleteMessage}}</h5>
<div class="background">
    <div>
        <table>
            <thead>
            <th>Award ID</th>
            <th>Award Name</th>
            <th>Award Recipient</th>
            <th>Award Created Date</th>
            </thead>

            <tbody>
                {{#each payload}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td>{{recipient}}</td>
                    <td>{{date}}</td>
                    <td><button onclick="deleteAward({{id}})">DELETE</button></td>
                </tr>
                {{/each}}

            </tbody>

        </table>
    </div>

    <div>
        <h2>{{deleteMessage}}</h2>
    </div>
    <br />
    <br />
    <form name="form1" id="form1" method="post" onsubmit="return redirect()">
        <input type="submit" class="buttonDelete" name="delete" id="delete" value="Update My History">
    </form>
</div>


    <script>
        function deleteAward(id) {

            var xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    console.log("Successfully deleted user!")

                }
            };
            data = {
                "id": id
            };
            console.log("your selected id is", +id);

            xhttp.open("POST", "/user-delete-award/deleteAward");
            xhttp.setRequestHeader("Content-type", "application/json");
            xhttp.send(JSON.stringify(data));
        }

        window.onload = function () {
            document.getElementById("form1").onsubmit = function () {
                window.location.replace("/user-delete-award");
                return false;
            }
        }
    </script>
